<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Menu">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MENU MAKANAN"
        android:textAlignment="center"
        android:textSize="35sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#414141" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="0dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Nama Makanan"
            android:textAlignment="center" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Harga"
            android:textAlignment="center" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Jumlah"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="1. Surabi Telur Oncom" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rp. 7000 " />

        <EditText
            android:id="@+id/menu1"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="2. Surabi Telur Kornet" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rp. 7000 " />

        <EditText
            android:id="@+id/menu2"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="3. Surabi Keju" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rp. 7000 " />

        <EditText
            android:id="@+id/menu3"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="4. Surabi Keju Spesial" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rp. 7000 " />

        <EditText
            android:id="@+id/menu4"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="5. Pisang Goreng Keju" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rp. 7000 " />

        <EditText
            android:id="@+id/menu5"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:gravity="center"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MENU MINUMAN"
        android:textAlignment="center"
        android:textSize="35sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#414141" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="0dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Nama Minuman"
            android:textAlignment="center" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Harga"
            android:textAlignment="center" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Jumlah"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="1. Es Teh Manis" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rp. 7000 " />

        <EditText
            android:id="@+id/menu6"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="2. Es Lemon Tea" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rp. 7000 " />

        <EditText
            android:id="@+id/menu7"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="3. Air Mineral" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rp. 7000 " />

        <EditText
            android:id="@+id/menu8"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:gravity="center"/>

    </LinearLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Total Harga :"/>

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/total_harga"
            android:textStyle="bold"
            android:textSize="20sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_pesan"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="#6b6b6b"
        android:text="PESAN"
        android:textColor="#292929"
        android:textSize="20sp"
        android:textStyle="bold"
        android:onClick="pesanan"/>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="#da5b5b"
        android:text="CANCEL"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:onClick="kembali"/>

</LinearLayout>